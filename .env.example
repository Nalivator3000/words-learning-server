# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/words_learning

# For local development with PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=words_learning
DB_USER=postgres
DB_PASSWORD=your_password_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Session Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your-session-secret-here-replace-with-random-string

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/apis/credentials
# See GOOGLE_OAUTH_SETUP.md for detailed instructions
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Apple Sign-In Configuration (optional, for future implementation)
# APPLE_CLIENT_ID=your-apple-client-id
# APPLE_TEAM_ID=your-apple-team-id
# APPLE_KEY_ID=your-apple-key-id
# APPLE_PRIVATE_KEY_PATH=path/to/AuthKey.p8
# APPLE_CALLBACK_URL=http://localhost:3001/auth/apple/callback