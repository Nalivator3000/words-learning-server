{
  "name": "lexybooster-server",
  "version": "5.4.11",
  "description": "LexyBooster - Language learning app with SRS and gamification",
  "main": "server-postgresql.js",
  "scripts": {
    "start": "node server-postgresql.js",
    "dev": "nodemon server-postgresql.js",
    "build:css": "tailwindcss -c config/tailwind.config.js -i ./public/css/tailwind-input.css -o ./public/css/tailwind-output.css --minify",
    "watch:css": "tailwindcss -c config/tailwind.config.js -i ./public/css/tailwind-input.css -o ./public/css/tailwind-output.css --watch",
    "generate:icons": "node utils/generate-icons.js",
    "version": "node scripts/utils/update-version.js",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "deploy": "npm run version:patch && git add package.json && echo Version updated to $(node -p \"require('./package.json').version\")",
    "precommit": "npm run version && git add public/index.html",
    "generate:feature-graphic": "node utils/generate-feature-graphic.js",
    "generate:screenshots": "node utils/generate-screenshots.js",
    "generate:screenshots:prod": "node utils/generate-screenshots-production.js",
    "generate:store-assets": "npm run generate:icons && npm run generate:feature-graphic",
    "test": "node tests/run-all-tests.js",
    "test:all": "node tests/run-all-tests.js",
    "test:api": "node tests/api/test-api-endpoints.js",
    "test:api:production": "node tests/api/test-production.js",
    "test:validate": "node tests/api/test-validation.js",
    "test:word-lists": "node tests/api/test-word-lists.js",
    "test:database": "node tests/database/test-vocabulary-schema.js",
    "test:translations": "node tests/database/test-translation-coverage.js",
    "test:security": "node tests/security/test-security.js",
    "test:study-flow": "node tests/integration/test-study-flow.js",
    "test:srs": "node tests/algorithms/test-srs-algorithm.js",
    "test:gamification": "node tests/gamification/test-xp-leveling.js",
    "test:streaks": "node tests/gamification/test-streaks-goals.js",
    "test:performance": "node tests/performance/test-benchmarks.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:mobile": "playwright test --project=\"iPhone SE\" --project=\"iPhone 12 Pro\" --project=\"Galaxy S21\"",
    "test:e2e:report": "playwright show-report",
    "test:production": "node tests/api/test-lexybooster-production.js",
    "test:endpoints": "node tests/api/test-all-endpoints.js",
    "translate:matrix": "node scripts/translations/translate-matrix-parallel.js",
    "translate:once": "node start-translations-once.js",
    "translate:auto": "node scripts/translations/auto-translate-cron.js 6",
    "translate:start": "node start-worker.js",
    "translate:check": "node scripts/utils/check-all-translations.js",
    "translate:status": "node scripts/utils/check-translation-status.js",
    "monitor": "node monitor-with-history.js",
    "db:check": "node quick-db-check.js",
    "db:check-users": "node check-user-words.js",
    "db:migrate:progress": "node migrations/run-progress-migration.js",
    "db:migrate:users": "node migrations/migrate-existing-users.js",
    "db:create-word-sets": "node scripts/create-word-sets-from-source.js",
    "worker": "node worker-translation.js"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.4.0",
    "@vitalets/google-translate-api": "^9.2.0",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "googleapis": "^169.0.0",
    "helmet": "^8.1.0",
    "html-minifier-terser": "^7.2.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "terser": "^5.44.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "puppeteer": "^24.26.1",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.14"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
