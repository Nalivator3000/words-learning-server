{
  "name": "lexybooster-server",
  "version": "5.1.4",
  "description": "LexyBooster - Language learning app with SRS and gamification",
  "main": "server-postgresql.js",
  "scripts": {
    "start": "node server-postgresql.js",
    "start:json": "node server.js",
    "dev": "nodemon server-postgresql.js",
    "dev:json": "nodemon server.js",
    "build": "node build-production.js",
    "build:local": "npm run build:css && node build-production.js",
    "build:css": "tailwindcss -i ./public/css/tailwind-input.css -o ./public/css/tailwind-output.css --minify",
    "watch:css": "tailwindcss -i ./public/css/tailwind-input.css -o ./public/css/tailwind-output.css --watch",
    "generate:icons": "node generate-icons.js",
    "version": "node update-version.js",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "deploy": "npm run version:patch && git add package.json && echo Version updated to $(node -p \"require('./package.json').version\")",
    "precommit": "npm run version && git add public/index.html",
    "generate:feature-graphic": "node generate-feature-graphic.js",
    "generate:screenshots": "node generate-screenshots.js",
    "generate:screenshots:prod": "node generate-screenshots-production.js",
    "generate:store-assets": "npm run generate:icons && npm run generate:feature-graphic",
    "test": "node test-production.js",
    "test:api": "node test-api-endpoints.js",
    "test:validate": "node test-validation.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:mobile": "playwright test --project=\"iPhone SE\" --project=\"iPhone 12 Pro\" --project=\"Galaxy S21\"",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "html-minifier-terser": "^7.2.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "terser": "^5.44.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "puppeteer": "^24.26.1",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.14"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
